generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id          Int       @default(autoincrement()) @id
  username    String
  email       String
  password    String
  todos       Todos[]
}

model Todos {
  id        Int   @default(autoincrement())   @id
  title     String
  priority  Priority  @default(LOW)
  userId    Int
  users     Users     @relation(fields: [userId], references: [id])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
